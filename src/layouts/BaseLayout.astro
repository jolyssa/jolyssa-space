---
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
import OfficeHoursButton from '../components/OfficeHoursButton.astro';
import ThemeToggle from '../components/ThemeToggle.astro';
import '../styles/global.css';
const { title, description } = Astro.props;
---

<!DOCTYPE html>
<html lang="en" class="dark">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content={description}>
  <title>{title} | jolyssa. </title>

  <!-- Favicon -->
  <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
  <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
  <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
  <link rel="manifest" href="/site.webmanifest">

  <!-- Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Libre+Baskerville:wght@700&family=General+Sans:wght@400;500;600;700&family=Geist+Mono&display=swap" rel="stylesheet">

  <!-- RSS Feed -->
  <link rel="alternate" type="application/rss+xml" title="Your Name's RSS Feed" href="/rss.xml" />

  <!-- Prevent theme FOUC -->
  <script is:inline>
    try {
      const theme = localStorage.getItem('theme') || 'dark';
      if (theme === 'dark') {
        document.documentElement.classList.add('dark');
      } else {
        document.documentElement.classList.remove('dark');
      }
    } catch (e) {}
  </script>
</head>

<body class="bg-background-light dark:bg-background text-text-primary-light dark:text-text-primary font-sans antialiased">
  <Navigation />

  <main class="min-h-screen">
    <slot />
  </main>

  <Footer />

  <OfficeHoursButton />
  <ThemeToggle />
</body>
</html>
