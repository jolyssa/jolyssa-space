---
import Layout from '../../layouts/BaseLayout.astro';
import Card from '../../components/Card.astro';
import { getCollection } from 'astro:content';

const all = await getCollection('thoughts', ({ data }) => !data.isTemplate);
const sorted = all.sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());
const featured = sorted.filter(item => item.data.featured);
---

<Layout 
  title="Thoughts" 
  description="Essays, musings, and philosophical writing."
>
  <div class="max-w-4xl mx-auto px-4 py-24">
    <header class="mb-16">
      <h1 class="font-serif text-5xl font-bold mb-4 text-text-primary-light dark:text-text-primary">Thoughts</h1>
      <p class="text-xl font-mono text-text-secondary-light dark:text-text-secondary leading-relaxed">
        Essays, musings, philosophical writing, and imperfect notes.
      </p>
    </header>

    {featured.length > 0 && (
      <section class="mb-16">
        <h2 class="font-serif text-2xl font-bold mb-6">Featured</h2>
        <div class="space-y-8">
          {featured.map(item => (
            <Card item={item} collection="thoughts" />
          ))}
        </div>
      </section>
    )}

    <section>
      <h2 class="font-serif text-2xl font-bold mb-6">All Thoughts</h2>
      <div class="space-y-8">
        {sorted.map(item => (
          <Card item={item} collection="thoughts" />
        ))}
      </div>
    </section>
  </div>
</Layout>
