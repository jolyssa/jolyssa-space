---
import Layout from '../../layouts/BaseLayout.astro';
import Card from '../../components/Card.astro';
import { getCollection } from 'astro:content';

const all = await getCollection('making', ({ data }) => !data.isTemplate);
const sorted = all.sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());
const featured = sorted.filter(item => item.data.featured);
---

<Layout 
  title="Making" 
  description="DIY projects, woodworking, clay, and furniture restoration."
>
  <div class="max-w-4xl mx-auto px-4 py-24">
    <header class="mb-16">
      <h1 class="font-serif text-5xl font-bold mb-4 text-text-primary-light dark:text-text-primary">Making</h1>
      <p class="text-xl font-mono text-text-secondary-light dark:text-text-secondary leading-relaxed">
        DIY projects, woodworking, clay, furniture restoration, and other hands-on explorations.
      </p>
    </header>

    {featured.length > 0 && (
      <section class="mb-16">
        <h2 class="font-serif text-2xl font-bold mb-6">Featured</h2>
        <div class="space-y-8">
          {featured.map(item => (
            <Card item={item} collection="making" />
          ))}
        </div>
      </section>
    )}

    <section>
      <h2 class="font-serif text-2xl font-bold mb-6 text-text-primary-light dark:text-text-primary">All Projects</h2>
      {sorted.length > 0 ? (
        <div class="space-y-8">
          {sorted.map(item => (
            <Card item={item} collection="making" />
          ))}
        </div>
      ) : (
        <div class="text-center py-12">
          <p class="text-text-secondary-light dark:text-text-secondary font-mono">
            No entries at the moment.
          </p>
        </div>
      )}
    </section>
  </div>
</Layout>
